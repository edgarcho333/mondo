{{ 'main-footer.css' | asset_url | stylesheet_tag }}

<footer class="footer">
    <div class="footer-container">
        <div class="footer-nav">
            <div class="logo-section footer-item">
                {% if section.settings.footer_logo != blank %}
                    {% if section.settings.logo_link != blank %}
                        <a href="{{ section.settings.logo_link }}">
                    {% endif %}
                    
                    {%- assign logo_alt = section.settings.footer_logo.alt | default: shop.name | escape -%}
                    {{ section.settings.footer_logo | image_url: width: 200 | image_tag:
                        class: 'logo',
                        alt: logo_alt,
                        width: section.settings.footer_logo.width,
                        height: section.settings.footer_logo.height
                    }}
                    
                    {% if section.settings.logo_link != blank %}
                        </a>
                    {% endif %}
                {% endif %}
            </div>
            
            <!-- First Column -->
            <div class="nav-column footer-item">
                <a href="{{ section.settings.amazon_link }}" class="nav-link">
                    {% if section.settings.amazon_icon != blank %}
                        {{ section.settings.amazon_icon | image_url: width: 20 | image_tag:
                            class: 'nav-icon',
                            alt: section.settings.amazon_text
                        }}
                    {% endif %}
                    {{ section.settings.amazon_text }}
                </a>
                <a href="{{ section.settings.privacy_link }}" class="nav-link">
                    {% if section.settings.privacy_icon != blank %}
                        {{ section.settings.privacy_icon | image_url: width: 20 | image_tag:
                            class: 'nav-icon',
                            alt: section.settings.privacy_text
                        }}
                    {% endif %}
                    {{ section.settings.privacy_text }}
                </a>
            </div>
            
            <!-- Second Column -->
            <div class="nav-column footer-item">
                <a href="{{ section.settings.about_link }}" class="nav-link">
                    {% if section.settings.about_icon != blank %}
                        {{ section.settings.about_icon | image_url: width: 20 | image_tag:
                            class: 'nav-icon',
                            alt: section.settings.about_text
                        }}
                    {% endif %}
                    {{ section.settings.about_text }}
                </a>
                <a href="{{ section.settings.refund_link }}" class="nav-link">
                    {% if section.settings.refund_icon != blank %}
                        {{ section.settings.refund_icon | image_url: width: 20 | image_tag:
                            class: 'nav-icon',
                            alt: section.settings.refund_text
                        }}
                    {% endif %}
                    {{ section.settings.refund_text }}
                </a>
            </div>
            
            <!-- Third Column -->
            <div class="nav-column footer-item">
                <a href="{{ section.settings.store_locator_link }}" class="nav-link">
                    {% if section.settings.store_locator_icon != blank %}
                        {{ section.settings.store_locator_icon | image_url: width: 20 | image_tag:
                            class: 'nav-icon',
                            alt: section.settings.store_locator_text
                        }}
                    {% endif %}
                    {{ section.settings.store_locator_text }}
                </a>
                <a href="{{ section.settings.shipping_link }}" class="nav-link">
                    {% if section.settings.shipping_icon != blank %}
                        {{ section.settings.shipping_icon | image_url: width: 20 | image_tag:
                            class: 'nav-icon',
                            alt: section.settings.shipping_text
                        }}
                    {% endif %}
                    {{ section.settings.shipping_text }}
                </a>
            </div>
            
            <!-- Fourth Column -->
            <div class="nav-column footer-item">
                <a href="{{ section.settings.contact_link }}" class="nav-link">
                    {% if section.settings.contact_icon != blank %}
                        {{ section.settings.contact_icon | image_url: width: 20 | image_tag:
                            class: 'nav-icon',
                            alt: section.settings.contact_text
                        }}
                    {% endif %}
                    {{ section.settings.contact_text }}
                </a>
                <a href="{{ section.settings.terms_link }}" class="nav-link">
                    {% if section.settings.terms_icon != blank %}
                        {{ section.settings.terms_icon | image_url: width: 20 | image_tag:
                            class: 'nav-icon',
                            alt: section.settings.terms_text
                        }}
                    {% endif %}
                    {{ section.settings.terms_text }}
                </a>
            </div>
        </div>
        
        <div class="footer-divider"></div>
        
        {% if section.settings.show_payment_icons %}
            <div class="payment-methods">
                {% for type in shop.enabled_payment_types %}
                    {{ type | payment_type_svg_tag: class: 'payment-icon' }}
                {% endfor %}
            </div>
        {% endif %}
    </div>
</footer>

