{{ 'video-video-grid-section.css' | asset_url | stylesheet_tag }}

<div class="video-grid-section">
  <div class="video-grid-container">
    <!-- ვიდეო 1 -->
    <div class="video-card" style="background-color: {{ section.settings.bg_color_1 }}">
      <div class="video-thumbnail">
        {% if section.settings.video_thumbnail_1 != blank %}
          {{ section.settings.video_thumbnail_1 | image_url: width: 400 | image_tag }}
        {% endif %}
        <div class="play-button" style="background-color: {{ section.settings.play_button_bg_1 }}">
          <span class="play-icon" style="color: {{ section.settings.play_button_color_1 }}">▶</span>
        </div>
      </div>
    </div>

    <!-- ვიდეო 2 -->
