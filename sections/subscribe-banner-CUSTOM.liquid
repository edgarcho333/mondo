{{ 'subscribe-banner-CUSTOM.css' | asset_url | stylesheet_tag }}

<div class="subscribe-banner">
  <div class="subscribe-banner__container">
    <div class="subscribe-banner__image-wrapper">
      {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 600 | image_tag: 
          class: "subscribe-banner__image",
          loading: "lazy"
        }}
      {%- else -%}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'subscribe-banner__image placeholder-svg' }}
      {%- endif -%}
    </div>
    <div class="subscribe-banner__content">
      {%- if section.settings.heading != blank -%}
        <h2 class="subscribe-banner__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      
      {%- if section.settings.subheading != blank -%}
        <p class="subscribe-banner__subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}
      
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" 
           class="subscribe-banner__button"
           style="background-color: {{ section.settings.button_color }};">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Subscribe Banner (CUSTOM)",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner Image"
    },
    {
      "type": "color",
      "id": "background_color_left",
      "label": "Left Background Color",
      "default": "#B8765D"
    },
    {
      "type": "color",
      "id": "background_color_right",
      "label": "Right Background Color",
      "default": "#F5F5F5"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Never Run Out Of Your Favorite Brew!"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "World-Class Coffee, Delivered Through Your Letterbox"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "SUBSCRIBE NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#5C5E8E"
    }
  ],
  "presets": [
    {
      "name": "Subscribe Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}